                <DataGridTextColumn  Header="C" IsReadOnly="True"  Width=""   FontSize="14"/>-->
            </DataGrid.Columns>
            
        </DataGrid>
        <ComboBox Name="cmbnumber" Margin="63,293,547,128" SelectionChanged="cmbnumber_SelectionChanged" PreviewMouseLeftButtonDown="cmbnumber_PreviewMouseLeftButtonDown" />
        <ComboBox x:Name="cmbrow" Margin="63,259,647,162" SelectionChanged="cmbrow_SelectionChanged" Loaded="cmbrow_Loaded" PreviewMouseLeftButtonDown="cmbrow_PreviewMouseLeftButtonDown"/>
        <Button x:Name="btnexit_Copy" Margin="678,81,54,331" Click="btnexit_Copy_Click" />
        <Label Margin="21,82,721,339" Content="Прилет"/>
        <Label Margin="10,123,699,298" Content="Время вылета"/>
        <Label Margin="7,164,699,257" Content="Время прилета"/>
        <Label Margin="10,259,759,162" Content="Ряд"/>
        <Label Margin="10,293,742,124" Content="Место"/>
    </Grid>
</Window>
